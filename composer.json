{
    "name": "21press",
    "description": "WordPress boilerplate for git deployment",
    "keywords": ["wordpress", "boilerplate", "git", "21six"],
    "license": "MIT",
    "authors": [
        {
            "name": "Neil Sweeney",
            "email": "neil@wolfiezero.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^5.5.9 || ^7.0",
        "vlucas/phpdotenv": "^2.4",
        "symfony/var-dumper": "^3.2.7",
        "composer/installers": "^1.0",
        "johnpbloch/wordpress": "4.*",
        "oscarotero/env": "^1.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5.1",
        "wpackagist-plugin/demo-data-creator": "^1.3"
    },
    "autoload": {
        "files": []
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@update-index",
            "@env"
        ],
        "post-update-cmd": "@update-index",
        "update-index": "php scripts/composer/update-index.php",
        "env":  [
            "php -r \"copy('.env.example', '.env');\"",
            "php scripts/composer/env.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "mu-plugins/{$name}": ["type:wordpress-muplugin"],
            "plugins/{$name}": ["type:wordpress-plugin"],
            "themes/{$name}": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wp"
    },
    "prefer-stable": true
}
