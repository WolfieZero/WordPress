{
    "name": "wordpress",
    "description": "WordPress boilerplate for git deployment",
    "keywords": ["wordpress", "boilerplate", "git"],
    "license": "MIT",
    "authors": [
        {
            "name": "Neil Sweeney",
            "email": "neil@wolfiezero.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "vlucas/phpdotenv": "^2.4",
        "symfony/var-dumper": "^3.2.7",
        "composer/installers": "^1.0",
        "johnpbloch/wordpress": "4.*",
        "oscarotero/env": "^1.1",
        "wpackagist-plugin/advanced-custom-fields": "*",
        "roots/wp-password-bcrypt": "^1.0"
    },
    "require-dev": {
        "wpackagist-plugin/demo-data-creator": "^1.3"
    },
    "autoload": {
        "files": [],
        "psr-4": {
            "WordPress\\Scripts\\": "./scripts/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "WordPress\\Scripts\\EnvSetup::process",
            "WordPress\\Scripts\\DatabaseSetup::process",
            "WordPress\\Scripts\\IndexSetup::process"
        ],
        "post-update-cmd": [
            "WordPress\\Scripts\\EnvSetup::process",
            "WordPress\\Scripts\\IndexSetup::process"
        ],
        "clean": [
            "rm .env",
            "rm -rf vendor",
            "rm -rf public/wp",
            "rm public/index.php"
        ]
    },
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}/": [
                "type:wordpress-muplugins",
                "wpackagist-plugin/advanced-custom-fields"
            ],
            "public/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wp"
    },
    "prefer-stable": true
}
