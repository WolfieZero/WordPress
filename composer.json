{
    "name": "wolfiezero/wordpress",
    "description": "Sensible git friendly WordPress install with added Lumberjack if required",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Neil Sweeney",
            "email": "neil@wolfiezero.com",
            "homepage": "https://wolfiezero.com"
        }
    ],
    "support": {
        "issues": "https://github.com/wolfiezero/wordpress/issues"
    },
    "require": {
        "php": ">=7.0",
        "wp-premium/advanced-custom-fields-pro": "dev-master",
        "vlucas/phpdotenv": "^2.4",
        "oscarotero/env": "^1.1",
        "johnpbloch/wordpress": "^4.9",
        "wpackagist-plugin/wp-mail-smtp": "*",
        "wpackagist-plugin/wp-migrate-db": "*",
        "wpackagist-plugin/amazon-s3-and-cloudfront": "*"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.1",
        "wpackagist-plugin/demo-data-creator": "*",
        "larapack/dd": "^1.1"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wp-premium/advanced-custom-fields-pro",
                "version": "master",
                "type": "wordpress-plugin",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/wp-premium/advanced-custom-fields-pro/archive/master.zip",
                    "reference": "master"
                },
                "require": {
                    "composer/installers": "^1.0"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wp"
    },
    "scripts": {
        "install-wp-cli": [
            "curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar"
        ],
        "update-wp-cli": [
            "php wp-cli.phar cli update --yes"
        ],
        "install-lumberjack": [
            "@composer require rareloop/lumberjack-core",
            "cd public/themes && git clone --depth=1 git@github.com:rareloop/lumberjack.git && rm -rf lumberjack/.git"
        ],
        "tidy": [
            "rm -rf public/wp/wp-content"
        ],
        "remove-git": [
            "rm -rf .git/"
        ],
        "env": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "new-project": [
            "@composer install-wp-cli",
            "@composer remove-git",
            "@composer tidy",
            "@composer env"
        ],
        "post-root-package-install": [
            "@composer new-project"
        ]
    }
}
